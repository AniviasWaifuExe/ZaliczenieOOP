<Window x:Class="projectuwu.Windows.CategoryUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectuwu.Windows"
        mc:Ignorable="d"
        Title="Aktualizacja kategori" Height="200" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Text="Aktualizacja" Margin="30" TextAlignment="Center" FontSize="15"></TextBlock>
        <TextBox Grid.Column="1" Grid.Row="0" Margin="30" Name="Name"></TextBox>
        <Button Grid.Column="2" Grid.Row="0" Margin="30" Content="Aktualizuj" Click="Update_Click"></Button>
    </Grid>
</Window>
